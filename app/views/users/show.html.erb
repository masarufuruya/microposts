<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>

    <ul class="nav nav-tabs" style="margin-top:20px;">
      <li role="presentation" class="active"><a href="#tab1" data-toggle="tab">ツイート(<%= @user.microposts.count %>)</a></li>
      <li role="presentation"><a href="#tab2" data-toggle="tab">フォロー</a></li>
      <li role="presentation"><a href="#tab3" data-toggle="tab">フォロワー</a></li>
    </ul>    
    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade in active" id="tab1">
        <% #micropostsがある時に表示 %>
        <% if @user.microposts.any? %>
          <ol class="microposts">
            <%= render @microposts %>
          </ol>
        <% else %>
          <p>まだツイートがありません</p>
        <% end %>
      </div>
      <div class="tab-pane fade" id="tab2">
          <p>コンテンツ2</p>
      </div>
      <div class="tab-pane fade" id="tab3">
          <p>コンテンツ3</p>
      </div>
    </div>
</div>

<%#= render 'shared/user_info' %>